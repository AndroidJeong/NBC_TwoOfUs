<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:padding="20dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/item_profile_circleImageView_grid"
        android:layout_width="50sp"
        android:layout_height="50sp"
        android:src="@drawable/sample_danielle"
        app:civ_border_width="1dp"
        app:layout_constraintBottom_toTopOf="@+id/item_name_textView_grid"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_name_textView_grid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="이름"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/item_profile_circleImageView_grid"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_profile_circleImageView_grid" />

    <ImageView
        android:id="@+id/item_like_imageView_grid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_favorite_border"
        app:layout_constraintBottom_toBottomOf="@+id/item_name_textView_grid"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/item_name_textView_grid"
        app:layout_constraintTop_toTopOf="@+id/item_name_textView_grid" />

</androidx.constraintlayout.widget.ConstraintLayout>